{
  "name": "terminal-mobile",
  "version": "1.0.0",
  "description": "Self-hosted PWA terminal app",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "build": "tsup server/index.ts --format esm --out-dir dist --clean --external node-pty --external better-sqlite3 --external bcrypt",
    "start": "node dist/index.js",
    "lint": "eslint server/ --ext .ts",
    "tunnel:setup": "bash scripts/setup-ngrok.sh",
    "tunnel": "bash scripts/start-tunnel.sh",
    "postinstall": "bash scripts/copy-vendor.sh"
  },
  "keywords": [
    "terminal",
    "pwa",
    "self-hosted"
  ],
  "license": "MIT",
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-pty": "^1.2.0-beta.11",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
